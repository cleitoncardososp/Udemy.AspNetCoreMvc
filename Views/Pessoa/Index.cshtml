@model AspNetCoreMvc.Models.Pessoa

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>

    <title>Listagem de Pessoas</title>
</head>

<body>
    <div class="container">
        <h2 class="mt-5 mb-3">
            Lista de Pessoas:
        </h2>

        <a class="btn btn-success mt-3 mb-3" asp-controller="pessoa" asp-action="create">Nova Pessoa</a>

        <table class="table table-striped mt-3 mb-3">
            <thead>
                <tr style="text-align:center">
                    <th scope="col">Id</th>
                    <th scope="col">Nome</th>
                    <th scope="col">E-mail</th>
                    <th scope="col">Endereço</th>
                    <th scope="col">Telefone</th>
                    <th scope="col" @*style="width: 276px;"*@>Opções</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var pessoa in ViewBag.Pessoas)
                {
                    <tr style="text-align:center">
                        <th scope="row">@pessoa.Id</th>
                        <td>@pessoa.Nome</td>
                        <td>@pessoa.Email</td>
                        <td>@pessoa.Endereco</td>
                        <td>@pessoa.Telefone</td>
                        <td>
                            <a class="btn btn-primary" asp-controller="pessoa" asp-action="details" asp-route-id="@pessoa.Id">Detalhes</a>
                            <a class="btn btn-secondary" asp-controller="pessoa" asp-action="edit" asp-route-id="@pessoa.Id">Editar</a>
                            <a class="btn btn-danger" asp-controller="pessoa" asp-action="delete" asp-route-id="@pessoa.Id">Deletar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>