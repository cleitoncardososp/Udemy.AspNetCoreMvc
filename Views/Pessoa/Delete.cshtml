@model AspNetCoreMvc.Models.Pessoa

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>

    <title>Exclusão de Registro</title>
</head>

<body>
    <div class="container">
        <h2 class="mt-5 mb-3">
            Excluir:
        </h2>

        <div class="mt-3 mb-3">
            <div class="col-5 mt-4 mb-4">
                <span class="fw-bold">Nome:</span> @Model.Nome
            </div>
            
            <div class="col-5 mt-4 mb-4">
                <span class="fw-bold">E-mail:</span> @Model.Email
            </div>

            <div class="col-5 mt-4 mb-4">
                <span class="fw-bold">Endereço:</span> @Model.Endereco
            </div>

            <div class="col-5 mt-4 mb-4">
                <span class="fw-bold">Telefone:</span> @Model.Telefone
            </div>

            <div>
                <h4>Tem certeza que deseja excluir este registro?</h4>
            </div>
            <div class="col-5 mb-3">
                <form method="post" asp-controller="pessoa" asp-action="delete">
                    <input type="submit" value="Deletar" class="btn btn-danger" />
                    <a class="btn btn-primary" asp-controller="pessoa" asp-action="index">Voltar</a>
                </form>
            </div>
        </div>

    </div>
</body>