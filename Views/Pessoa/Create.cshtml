@model AspNetCoreMvc.Models.Pessoa

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <title>Novo Registro</title>
</head>

<body>
    <div class="container">
        <h2 class="mt-5 mb-3">
            Cadastro:
        </h2>

        <div class="mt-3 mb-3">
            <form method="post" asp-controller="pessoa" asp-action="create">
                <div class="col-5 mb-3">
                    <label for="Nome" class="form-label fw-bold">Nome:</label>
                    <input asp-for="Nome" type="text" class="form-control" title="Digite o seu nome completo." id="Nome" placeholder="Nome Completo" maxlength="100" minlength="5" required>
                </div>
                <div class="col-5 mb-3">
                    <label for="Email" class="form-label fw-bold">E-mail:</label>
                    <input asp-for="Email" type="email" class="form-control" id="Email" title="Digite o seu e-mail." placeholder="email@provedor.com" maxlength="100" minlength="7" required>
                </div>
                <div class="col-5 mb-3">
                    <label for="Endereco" class="form-label fw-bold">Endereco:</label>
                    <input asp-for="Endereco" type="text" class="form-control" id="Endereco" title="Digite o endereço." placeholder="Logradouro Completo" maxlength="100" minlength="6" required>
                </div>
                <div class="col-3 mb-3">
                    <label for="Telefone" class="form-label fw-bold">Telefone:</label>
                    <input asp-for="Telefone" type="tel" class="form-control" id="Telefone" title="Digite o telefone com o DDD" placeholder="(99)99999-9999" maxlength="11" minlength="10" required>
                </div>
                <div class="col-5 mb-3">
                    <button type="submit" class="btn btn-primary mt-3">Salvar</button>
                    <a class="btn btn-danger mt-3" asp-controller="pessoa" asp-action="index">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</body>
