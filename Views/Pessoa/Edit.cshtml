@model AspNetCoreMvc.Models.Pessoa

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>

    <title>Edição de Registro</title>
</head>

<body>
    <div class="container">
        <h2 class="mt-5 mb-3">
            Editar:
        </h2>

        <div class="mt-3 mb-3">
            <form method="post" asp-controller="pessoa" asp-action="edit">
                <div class="col-5 mb-3">
                    <label for="Nome" class="form-label fw-bold">Nome:</label>
                    <input asp-for="Nome" type="text" class="form-control" id="Nome" required>
                </div>
                <div class="col-5 mb-3">
                    <label for="Email" class="form-label fw-bold">Email:</label>
                    <input asp-for="Email" type="text" class="form-control" id="Email" required>
                </div>
                <div class="col-5 mb-3">
                    <label for="Endereco" class="form-label fw-bold">Endereco:</label>
                    <input asp-for="Endereco" type="text" class="form-control" id="Endereco" required>
                </div>
                <div class="col-4 mb-3">
                    <label for="Telefone" class="form-label fw-bold">Telefone:</label>
                    <input asp-for="Telefone" type="text" class="form-control" id="Telefone" required>
                </div>
                <div class="col-5 mb-3">
                    <button type="submit" class="btn btn-success">Salvar</button>
                    <a class="btn btn-danger" asp-controller="pessoa" asp-action="index">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</body>