@model AspNetCoreMvc.Models.Pessoa

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"></script>

    <title>Detalhes do Registro</title>
</head>

<body>
    <div class="container">
        <h2 class="mt-5 mb-3">
            Detalhes:
        </h2>

        <div class="mt-3 mb-3">
            <div class="col-5 mt-4 mb-4">
                <span class="fw-bold">Nome:</span> @Model.Nome
            </div>

            <div class="col-5 mt-4 mb-4">
                <span class="fw-bold">Email:</span> @Model.Email
            </div>

            <div class="col-5 mt-4 mb-4">
                <span class="fw-bold">Endereço:</span> @Model.Endereco
            </div>

            <div class="col-5 mt-4 mb-4">
                <span class="fw-bold">Telefone:</span> @Model.Telefone
            </div>

            <div class="col-5 mb-3">
                <a class="btn btn-primary" asp-controller="pessoa" asp-action="index">Voltar</a>
            </div>
        </div>
    </div>
</body>
